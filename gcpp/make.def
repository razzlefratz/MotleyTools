#!/bin/make -f
# file: gcpp/Makefile

# ====================================================================
# environment;
# --------------------------------------------------------------------

include ../../make.def

# ====================================================================
# gcpp flags;
# --------------------------------------------------------------------

CFLAGS=-Wall -Wextra -Wno-unused-parameter -DMAKEFILE -D_GNU_SOURCE
LFLAGS=

# ====================================================================
# gcpp rules;
# --------------------------------------------------------------------

%.o: %.cpp
	${CXX} -c ${<} ${CFLAGS}
%: %.o
	${CXX} -o ${@} ${LFLAGS} ${^}

